{
  "name": "bongabdo",
  "version": "1.0.0",
  "description": "Modern TypeScript library for converting Gregorian dates to Bengali calendar (বঙ্গাব্দ)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "bengali",
    "bangla",
    "calendar",
    "date",
    "conversion",
    "bongabdo",
    "বঙ্গাব্দ",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh0umik/bongabdo.git"
  },
  "bugs": {
    "url": "https://github.com/sh0umik/bongabdo/issues"
  },
  "homepage": "https://github.com/sh0umik/bongabdo#readme"
}
